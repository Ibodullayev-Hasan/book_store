<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store</title>
    <link rel="icon" type="image/jpg" href="/images/image-icon.jpg" />

    <!-- link css bootsrtrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
      >
   <!-- link from local  file -->
    <link rel="stylesheet" href="/styles/homeStyle.css" >

  </head>
  <body>
    <!-- coverage div -->
    <div class="box">
      <!-- header -->
      <header id="header">
        <h1 class="text-title nameSite">
          Book Store
        </h1>
        <a href="/login" class="btn btn-success btnHead">Login</a>
        <a href="/admin" class="btn btn-success btnHead">Admin</a>
      </header>

      <!-- main -->
      <main>

        <% booksFile.forEach(el => { %>
            <div class="card " id="cardStyle">
              <div class="imgCard">
                <img    src=<%= el.img %> alt=<%= el.title %> >
              </div>
                <div class="card-body">
                <p class="card-title">Name: <%= el.title %></p>
                <p class="card-title tavsif">Tavsif: <%= el.desc %></p>
                <p class="card-title">Mavjud: <%= el.count %> ta</p>
                <p class="card-title">Narxi: <%= el.price %> so'm</p>
                <p class="card-title">Muallif: <%= el.authorId %> </p>                   
                <p class="card-text">Turkumi: <%= el.categorysId %> </p> 
                  
                <a href="/order/<%= el.id %>" class="btn btn-success">Buyurtma berish</a>
              </div>
            </div>
            <%}) %>
            
      </main>
    
     

      <!-- go top -->
       <a id="toTop" href="#">
        <div></div>
        <div></div>
       </a>
    </div>

    <!-- Script link -->
     <script src="/javaScript/homeScript.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybBogGzACaIIhiS56/r+GjnlA2Bu/aLGP3vfqZeNf0ElFQDOA" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-qH7gwitbK6NmGg5gksdAAW2/czsv6khtO/ZwxzU2Hs2dKd7HBDdLjsENq9IldsbK" crossorigin="anonymous"></script>
  </body>
</html>
